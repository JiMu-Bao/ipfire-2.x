#!/bin/sh
. /etc/sysconfig/rc
. ${rc_functions}

CHANNEL="6"
COUNTRY="00"
TXPOWER="auto"
INTERFACE="blue0"
MACMODE="0"

eval $(/usr/local/bin/readhash /var/ipfire/wlanap/settings)

case "${1}" in
	start)
		boot_mesg "Starting hostapd... "
		loadproc /usr/bin/hostapd -B /etc/hostapd.conf
		;;

	stop)
		boot_mesg "Stopping hostapd..."
		killproc /usr/bin/hostapd
		evaluate_retval
		;;

	restart)
		${0} stop
		sleep 1
		${0} start
		;;

	status)
		statusproc /usr/bin/hostapd
		;;

	*)
		echo "Usage: ${0} {start|stop|restart|status}"
		exit 1
		;;
esac
